# -*- coding: utf-8 -*-


"""
This script runs the main POTPyRI pipeline
"""

from potpyri.archives import download_keck_data

if __name__ == '__main__':
    args = download_keck_data.add_options()

    if args.cookie_file is not None:
        login(args.cookie_file)

    outfile, outdir = download_keck_data.date_query(args.date, 
        args.instrument, cookie=args.cookie_file)
    
    if outfile is not None:
        download_keck_data.download_data(outfile, outdir, 
            cookie=args.cookie_file)
